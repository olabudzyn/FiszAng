<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/gradient2"
    tools:context=".FlashcardActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_weight="0.9">

        <TextView
            android:layout_marginTop="@dimen/medium_margin"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="@dimen/max_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:id="@+id/textViewCard"
            android:text="FlashCards"/>

        <TextView
            android:id="@+id/textViewCardWords"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/max_margin"
            android:background="@drawable/flashcardshape"
            android:gravity="center"
            android:text="Flash Card text"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

        <Button
            android:textAllCaps="false"
            android:id="@+id/buttonNext"
            android:textColor="#F0F0F0"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/buttonshape3"
            android:shadowColor="#424242"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_marginBottom="@dimen/normal_margin"
            android:text="Next" />


</LinearLayout>